<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rootCard"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    android:elevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <TextView
            android:id="@+id/companyNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/textPrimaryColor"
            android:fontFamily="@font/roboto_bold"
            android:textSize="18sp"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textColor="@color/textPrimaryColor"
            android:fontFamily="@font/roboto"
            android:textSize="15sp"

            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salary"
            android:visibility="gone"
            android:textSize="13sp"
            android:textColor="@color/textPrimaryColor"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto_bold"
            />
        <TextView
            android:id="@+id/salaryTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salary"
            android:visibility="gone"
            android:textSize="12sp"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/roboto"
             />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="@color/grayDividerColor"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_location_on_24"
                        app:tint="@color/grayIconColor" />

                    <TextView
                        android:id="@+id/locationView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Location"
                        android:textColor="@color/grayTextColor"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/locationTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:padding="1dp"
                    android:text="Location"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/grayDividerColor"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_office_travel_24" />

                    <TextView
                        android:id="@+id/expView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Experiance"
                        android:textColor="@color/grayTextColor"
                        android:textSize="12sp" />
                </LinearLayout>
                <TextView
                    android:id="@+id/expTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:padding="1dp"
                    android:text="Location"
                    android:textSize="14sp" />
            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grayDividerColor"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="15dp"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/materialButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Call HR"
            app:cornerRadius="10dp"
            app:iconGravity="start"
            app:iconPadding="8dp"
            android:backgroundTint="@color/callButtonColor"
            android:textColor="@color/textPrimaryColor"
            android:textStyle="bold"
            android:padding="16dp"/>

        <ImageView
            android:id="@+id/bookmark_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_bookmark_border_24"
            android:layout_marginStart="50dp"
            />
    </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
